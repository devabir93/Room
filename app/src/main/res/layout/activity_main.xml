<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    tools:context="com.example.farouk.roomx.MainActivity">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:id="@+id/root">

        <TextView
            android:id="@+id/tv_login_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/Navy"
            android:textSize="@dimen/big_font_size"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />



        <EditText
            android:background="@drawable/editbox_background"
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:drawablePadding="5dip"
            android:ems="10"
            android:hint="@string/Email"
            android:textColorHint="@color/Blue"
            android:drawableLeft="@drawable/email"
            android:drawableStart="@drawable/email"/>

        <EditText
            android:background="@drawable/editbox_background"
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="2dp"

            android:drawablePadding="5dip"
            android:ems="10"
            android:textColorHint="@color/Blue"
            android:hint="@string/password"
            android:drawableLeft="@drawable/password"
            android:drawableStart="@drawable/password"/>


        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/Navy"
            android:text="@string/login"
            android:textSize="@dimen/bt_txt_size"
            android:textColor="@color/white"
            android:onClick="login"/>

        <Button
            android:id="@+id/bt_login_SingnUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:text="@string/SignUp"
            android:onClick="SingnUP"
            android:textSize="@dimen/bt_txt_size"
            android:textColor="@color/white" />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/building"
        android:layout_gravity="center_horizontal|top" />


</FrameLayout>
