<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"

    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

            <TextView
                android:textDirection="locale"
                android:text="@string/Place_bookings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_resrv_place"
                android:textColor="@android:color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
               />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:text="@string/date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_resrv_Start"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/blue_list"
                    android:textSize="18sp"/>

                <TextView
                    android:text="@string/start_booking"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_resrv_StartDate"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:id="@+id/innerLine"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="@string/date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_resrv_End"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/blue_list"
                    android:textSize="18sp"/>

                <TextView
                    android:text="@string/End_booking"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_resrv_EndDate"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_200"/>

</LinearLayout>